	// 		quantity.value = parseInt(quantity.value) - 1;
	// 	}
	// });

	// btnIncrease.addEventListener('click', function() {
	// 	quantity.value = parseInt(quantity.value) + 1;
	// });

</script>

{% schema %}
{
	"name": "Main Cart",
	"settings": [
		{
			"type": "text",
			"id": "section_heading",
			"label": "Section Heading",
			"default": "Shopping Cart"
		}
	]
}
{% endschema %}