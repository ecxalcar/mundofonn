<style>
    .article .img img {
        height: 300px;
        min-height: 300px;
        object-fit: cover;
    }

</style>
<div class="container my-5 py-5">
    <div class="row">
        <div class="col-md-3">
            <h2>{{ section.settings.heading_article }}</h2>
        </div>
        <div class="col-md-9">
            <div class="article bg-light border p-4">
                <div class="img">
                    {{ section.settings.popular_article.image | img_url: 'master' | img_tag: '','w-100' }}
                </div>
                <h3 class="py-3">{{ section.settings.popular_article.title }}</h3>
                <p>{{ section.settings.popular_article.content }}</p>
                <a href="{{ section.settings.popular_article.url }}" class="btn btn-warning px-5">Read More...</a>
            </div>
        </div>
    </div>
</div><!-- /container -->

{% schema %}
{
    "name": "Popular Article",
    "settings": [
        {
            "type": "text",
            "id": "heading_article",
            "label": "Heading Article",
            "default": "Read Our Most Popular Article :)"
        },
        {
            "type": "article",
            "id": "popular_article",
            "label": "Choose an article"
        }
    ]
}
{% endschema %}