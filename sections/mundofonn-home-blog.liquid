<div class="container">
	<h2 class="text-center my-5 pt-5">{{ section.settings.heading_blog }}</h2>
	<div class="row" data-masonry="{&quot;percentPosition&quot;: true }">
		
		{% for article in section.settings.home_blog.articles %}
			{% if forloop.first %}
				<div class="col-sm-6 col-lg-4 mb-4" style="position: absolute; left: 0%; top: 0px;">
					<div class="card bg-warning">
						<div class="card-body">
							<h5 class="card-title">{{ article.title }}</h5>
							<a href="{{ article.url }}" class="btn btn-dark">{{ 'homepage.home_blog.read_more_btn' | t }}</a>
						</div><!--card-body-->
					</div><!--card-->
				</div><!--col-->
			{% elsif forloop.index == 5 %}
				<div class="col-sm-6 col-lg-4 mb-4" style="position: absolute; left: 0%; top: 0px;">
					<div class="card bg-light border-warning">
						<div class="card-body">
							<h5 class="card-title">{{ article.title }}</h5>
							<a href="{{ article.url }}" class="btn btn-dark">{{ 'homepage.home_blog.read_more_btn' | t }}</a>
						</div><!--card-body-->
					</div><!--card-->
				</div><!--col-->
			{% else %}
				<div class="col-sm-6 col-lg-4 mb-4" style="position: absolute; left: 0%; top: 0px;">
					<div class="card {% cycle 'border', 'bg-light', 'border-dark', '' %}">
						{{ article.image | image_url: width: 500 | image_tag: alt: '', class: 'w-100' }}
						<div class="card-body">
							<h5 class="card-title">{{ article.title }}</h5>
							<a href="{{ article.url }}" class="btn btn-warning">{{ 'homepage.home_blog.read_more_btn' | t }}</a>
						</div><!--card-body-->
					</div><!--card-->
				</div><!--col-->
			{% endif %}
		{% else %}
			<div class="col-sm-6 col-lg-4 mb-4" style="position: absolute; left: 0%; top: 0px;">
				<div class="card">
				<img src="https://images.unsplash.com/photo-1556905055-8f358a7a47b2?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" alt="" width="" height="">
				<div class="card-body">
					<h5 class="card-title">Card title</h5>
					<p class="card-text">Lorem ipsum, dolor sit amet consectetur adipisicing elit. </p>
					<button class="btn btn-primary">{{ 'homepage.home_blog.read_more_btn' | t }}</button>
				</div><!--card-body-->
				</div><!--card-->
			</div><!--col-->
			
			<div class="col-sm-6 col-lg-4 mb-4">
				<div class="card p-3">
				<figure class="p-3 mb-0">
					<blockquote class="blockquote">
					<p>Lorem ipsum, dolor sit amet consectetur adipisicing elit</p>
					</blockquote>
					<figcaption class="blockquote-footer mb-0 text-muted">
					</figcaption>
				</figure>
				</div><!--card-->
			</div><!--col-->
			
			<div class="col-sm-6 col-lg-4 mb-4">
				<div class="card">
				<img src="https://images.unsplash.com/photo-1467043237213-65f2da53396f?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80" alt="" width="" height="" loading="lazy">
				<div class="card-body">
						<h5 class="card-title">Card title</h5>
						<p class="card-text">Lorem ipsum, dolor sit amet consectetur adipisicing elit</p>
				</div><!--card-body-->
				</div><!--card-->
			</div><!--col-->
			
			<div class="col-sm-6 col-lg-4 mb-4">
				<div class="card bg-warning p-3">
				<figure class="mb-0">
					<blockquote class="blockquote">
					<p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. </p>
					</blockquote>
					<figcaption class="blockquote-footer mb-0">
					</figcaption>
				</figure><!--figure-->
				</div><!--card-->
			</div><!--col-->
			
			<div class="col-sm-6 col-lg-4 mb-4">
				<div class="card">
				<div class="card-body">
					<h5 class="card-title">Card title</h5>
					<p class="card-text">Lorem, ipsum dolor sit amet consectetur adipisicing elit.</p>
				</div><!--card-body-->
				</div><!--card-->	
			</div><!--col-->
			
			<div class="col-sm-6 col-lg-4 mb-4">
				<div class="card">
				<img src="https://images.unsplash.com/photo-1489987707025-afc232f7ea0f?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" alt="" width="" height="" loading="lazy">
				</div><!--card-->
			</div><!--col-->
			
			<div class="col-sm-6 col-lg-4 mb-4" >
				<div class="card p-3 text-end">
				<figure class="mb-0">
					<blockquote class="blockquote">
						<h5 class="card-title">Card title</h5>
					<p>Lorem, ipsum dolor sit amet consectetur adipisicing elit.</p>
					</blockquote>
					<figcaption class="blockquote-footer mb-0 text-muted">
					</figcaption>
				</figure>
				</div><!--card-->	
			</div><!--col-->
			
			<div class="col-sm-6 col-lg-4 mb-4">
				<div class="card bg-secondary">
				<div class="card-body">
					<h5 class="card-title text-white">Card title</h5>
					<p class="card-text text-white">Lorem, ipsum dolor sit amet consectetur adipisicing elit.</p>
				</div><!--card-body-->
				</div><!--card-->	
			</div><!--col-->
		{% endfor %}
	</div><!--row-->
</div>

{% schema %}
{
    "name": "Blog",
	"tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading_blog",
            "label": "Heading Blog",
            "default": "Blog :)"
        },
        {
            "type": "blog",
            "id": "home_blog",
            "label": "Select a Blog"
        }
    ]
}
{% endschema %}