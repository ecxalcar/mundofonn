<div class="container">
	<h2 class="text-center mb-5">Collections</h2>
	<div class="row" data-masonry="{ percentPosition: true }">
		{% for collection in collections %}
			<div class="col-sm-6 col-lg-3 mb-4">
				<a href="{{ collection.url }}">
					<div class="card p-2 bg-light">
						{% if collection.image %}
							{{ collection.image | image_url: width: 500 | image_tag: alt: '', class: '' }}
						{% else %}
							{{ collection.products.first.image | image_url: width: 500 | image_tag: alt: '', class: 'w-100' }}
						{% endif %}
						<h5 class="text-center mt-3">{{ collection.title }}</h5>
					</div><!-- /card -->
				</a><!-- /a -->
			</div><!-- /col -->
		{% endfor %}
	</div><!-- /row -->
</div><!-- /container -->