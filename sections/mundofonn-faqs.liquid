<style>
    .question img,
    .question svg {
        width: 100%;
        height: 100%;
        position: absolute;
        padding: 0 !important;
        margin: 0 !important;
        min-width: auto;
        min-height: auto;
        max-width: initial;
        max-height: initial;
        object-fit: cover;
    }

    .question {
        width: 100%;
        padding-bottom: 100%;
        position: relative;
    }

</style>
<div class="container">
    <div class="heading text-center">
        <h3 class="mt-5 bg-dark rounded-pill d-inline-block py-2 px-5 text-white text-center">{{ section.settings.section_heading }}</h3>
    </div>

    <div class="row row-cols-sm-2 row-cols-md-3 mt-5">
        {% for block in section.blocks %}
            {% case block.type %}
                {% when 'question' %}
                <div class="col mb-4">
                    {% unless block.settings.question_url == blank %}
                        <a href="{{ block.settings.question_url }}">
                    {% endunless %}
                    <div class="question bg-light">
                        {% if block.settings.question_img == blank %}
                            {{ 'lifestyle-2' | placeholder_svg_tag }}
                        {% else %}
                            {{ block.settings.question_img | image_url: width: 500 | image_tag: alt: '', class: 'mb-5' }}
                        {% endif %}
                    </div><!-- /card -->
                    {% unless block.settings.question_url == blank %}
                        </a>
                    {% endunless %}
                </div><!-- /col -->
            {% endcase %}
        {% else %}
            {% for block in (1..3) %}
                <div class="col mb-4">
                    <a href="#0">
                        <div class="question bg-secondary">
                            {{ 'lifestyle-1' | placeholder_svg_tag }}
                        </div><!-- /card -->
                    </a>
                </div><!-- /col -->
            {% endfor %}
        {% endfor %}

    </div><!-- /row -->
</div><!-- /container -->

{% schema %}
{
    "name": "FAQs",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "section_heading",
            "label": "Section Heading",
            "default": "FAQs Header"
        }
    ],
    "blocks": [
        {
            "name": "Question",
            "type": "question",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "question_img",
                    "label": "Image"
                },
                {
                    "type": "url",
                    "id": "question_url",
                    "label": "Question URL"
                }
            ]
        }
    ]
}
{% endschema %}