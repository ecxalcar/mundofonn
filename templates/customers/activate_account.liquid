<section>
	<div class="container my-5 py-5">
		<div class="row">
			<div class="col-md-7 mx-auto">
				<div class="login-form-wrapper p-5 bg-light border">
					<h3>Activate Account</h3>
					<p>Create your password to active your account.</p>
					<div class="login-form mt-4">
						{% form 'activate_customer_password' %}
							{% if form.errors.size > 0 %}
								<div class="alert alert-danger">{{ form.errors | default_errors }}</div>
							{% endif %}
							<div class="form-floating mb-3">
								<input type="password" name="customer[password]" id="CustomerPassword" class="form-control" placeholder="Password" required>
								<label for="CustomerPassword">Password</label>
							</div><!-- /form-floating -->
							<div class="form-floating">
								<input type="password" name="customer[password_confirmation]" id="CustomerConfirmPassword" class="form-control" placeholder="Confirm Password" required>
								<label for="CustomerConfirmPassword">Confirm Password</label>
							</div><!-- /form-floating -->
							<div class="form-links text-center d-flex align-items-center justify-content-center  mt-4">
								<input type="submit" value="Activate Account" class="btn me-2 btn-warning btn-lg">
								<input type="submit" value="Decline Invitation" class="btn ms-2 btn-outline-warning text-dark btn-lg">
							</div><!-- /form-links -->
						{% endform %}
					</div><!-- /login-form -->
				</div><!-- /login-form-wrapper -->
			</div><!--/.col-md-7-->
		</div><!-- /row -->
	</div><!-- /container -->
</section>